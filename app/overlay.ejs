<div id="overlayContainer" style="display: none;">
    <div id="serverSelectContent" style="display: none;">
        <span id="serverSelectHeader"><%- lang('overlay.serverSelectHeader') %></span>
        <input type="text" id="serverSearchInput" placeholder="Search servers..." class="serverSearchBox">
        <div id="serverSelectList">
            <div id="serverSelectListScrollable">
                <!-- Server listings populated here. -->
            </div>
            <div id="noServersMessage" style="display: none;">
                <svg viewBox="0 0 24 24" width="64" height="64" style="opacity: 0.3; margin-bottom: 16px;">
                    <path fill="currentColor" d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,7H13V13H11V7M11,15H13V17H11V15Z"/>
                </svg>
                <span id="noServersMessageText">No servers found</span>
                <span id="noServersMessageHint">Try adjusting your search</span>
            </div>
        </div>
        <div id="serverDetailsDialog" style="display: none;">
            <div class="serverDetailsContent">
                <div class="serverDetailsHeader">
                    <img id="serverDetailsIcon" class="serverDetailsIcon" alt="Server Icon">
                    <div class="serverDetailsOverlay">
                        <h2 id="serverDetailsName"></h2>
                        <p id="serverDetailsDescription"></p>
                    </div>
                </div>
                <div class="serverDetailsBody">
                    <div class="serverDetailsMeta">
                        <div class="serverDetailsItem">
                            <span class="label">Modpack Version</span>
                            <span id="serverDetailsVersion"></span>
                        </div>
                        <div class="serverDetailsItem">
                            <span class="label">Minecraft Engine Version</span>
                            <span id="serverDetailsMinecraft"></span>
                        </div>
                        <div class="serverDetailsItem">
                            <span class="label">Server IP</span>
                            <span id="serverDetailsAddress"></span>
                        </div>
                    </div>
                    <div class="serverDetailsActions">
                        <button id="serverDetailsConfirm" class="button-primary">Select Server</button>
                        <button id="serverDetailsCancel" class="button-secondary">Cancel</button>
                    </div>
                    <div class="button-group-utilities">
                        <button id="serverDetailsWebsite" class="button-utility">View Website</button>
                        <button id="serverDetailsResources" class="button-utility">Resources</button>
                    </div>
                </div>
            </div>

            <!-- Resources modal -->
            <div id="serverResourcesModal" style="display: none;">
                <div class="modalContent">
                    <div class="modalHeader">
                        <h3>Server Resources</h3>
                        <button class="modalClose">&times;</button>
                    </div>
                    <div class="modalBody">
                        <input type="text" id="resourceSearch" placeholder="Search resources..." class="resourceSearchBox">
                        <div class="resourceCategories">
                            <button class="resourceTab active" data-tab="required">Required</button>
                            <button class="resourceTab" data-tab="optional">Optional</button>
                            <button class="resourceTab" data-tab="libraries">Libraries</button>
                        </div>
                        <div class="resourceList">
                            <!-- Resources populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="serverSelectActions">
            <button id="serverSelectConfirm" class="overlayKeybindEnter" type="submit"><%- lang('overlay.serverSelectConfirm') %></button>
            <div id="serverSelectCancelWrapper">
                <button id="serverSelectCancel" class="overlayKeybindEsc"><%- lang('overlay.serverSelectCancel') %></button>
            </div>
        </div>
    </div>
    <div id="accountSelectContent" style="display: none;">
        <span id="accountSelectHeader"><%- lang('overlay.accountSelectHeader') %></span>
        <div id="accountSelectList">
            <div id="accountSelectListScrollable">
                <!-- Accounts populated here. -->
            </div>
        </div>
        <div id="accountSelectActions">
            <button id="accountSelectConfirm" class="overlayKeybindEnter" type="submit"><%- lang('overlay.accountSelectConfirm') %></button>
            <div id="accountSelectCancelWrapper">
                <button id="accountSelectCancel" class="overlayKeybindEsc"><%- lang('overlay.accountSelectCancel') %></button>
            </div>
        </div>
    </div>
    <div id="overlayContent">
        <span id="overlayTitle">Lorem Ipsum:<br>Finis Illud</span>
        <span id="overlayDesc">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud..</span>
        <div id="overlayActionContainer">
            <button id="overlayAcknowledge" class="overlayKeybindEnter">Conare Iterum</button>
            <div id="overlayDismissWrapper">
                <button id="overlayDismiss" style="display: none;" class="overlayKeybindEsc">Dismiss</button>
            </div>
        </div>
    </div>
    <script src="./assets/js/scripts/overlay.js"></script>
</div>