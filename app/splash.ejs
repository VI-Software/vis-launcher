        <div id="splashProgressBar">
          <div id="splashProgressFill" aria-hidden="true"></div>
        </div>
        <div id="splashProgressText">Please wait</div>
      </div>
    </div>
  </div>
  <script src="assets/js/scripts/splash.js"></script>
</body>

</html>